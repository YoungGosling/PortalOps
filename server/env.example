# Database Configuration
DATABASE_URL=postgresql://portalops:password@localhost:5432/portalops

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15

# API Configuration
API_V1_STR=/api
PROJECT_NAME=PortalOps

# File Upload Configuration
UPLOAD_DIR=/uploads
MAX_FILE_SIZE=10485760  # 10MB

# HR Webhook Configuration
HR_WEBHOOK_API_KEY=your-hr-webhook-secret-key

# Email Configuration (for scheduled notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@portalops.com

# Development Configuration
DEBUG=True



